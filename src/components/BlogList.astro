---
layout: "../layouts/BlogLayout.astro"
import { getCollection, type CollectionEntry } from 'astro:content';

type BlogPost = CollectionEntry<'blog'>;
const posts: BlogPost[] = await getCollection('blog');
---

<section class="blog-list">
    <h1>Things I Wrote (Against My Better Judgment)</h1>
    <ul>
      {posts.map((post: BlogPost) => (
        <li>
          <a href={`/blog/${post.id}`}>{post.data.title}</a> | {post.data.date}
        </li>
      ))}
    </ul>
  </section>

  <style>
    .blog-list {
          max-width: 700px;
          margin: 0 auto;
          text-align: left;
          padding: 20px;
      }
  
      ul {
          list-style: none;
          padding: 0;
      }
  
      ul li {
          margin-bottom: 10px;
      }
  
      ul li a {
          text-decoration: none;
          color: #2E2E2E;
          font-weight: 500;
          transition: color 0.3s;
      }
  
      ul li a:hover {
          color: #e47f6b;
      }
  </style>
  