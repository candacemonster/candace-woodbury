---
import Footer from '../components/Footer.astro';

interface Props {
  currentUrl: string;
}
const { currentUrl } = Astro.props as Props;
---
<aside class="sidebar mobile-hidden" id="sidebar">
  <!-- Main nav links -->
  <nav>
    <ul>
      <!-- Home link with extra spacing -->
      <li class="home-link">
        <a href="/" class={currentUrl === '/' ? 'active' : ''}>Candace Woodbury</a>
      </li>
      <li>
        <a href="/blog" class={currentUrl.startsWith('/blog') ? 'active' : ''}>
          letters and ruminations
        </a>
      </li>
      <li>
        <a href="/roast-ride-read" class={currentUrl.startsWith('/roast-ride-read') ? 'active' : ''}>
          roast, ride, read
        </a>
      </li>
      <li>
        <a href="/bookmarks" class={currentUrl.startsWith('/bookmarks') ? 'active' : ''}>
          bookmarked
        </a>
      </li>
    </ul>
  </nav>

  <!-- Additional section(s) before the footer -->
  <div class="sidebar-section">
    <ul>
      <!-- <li><a href="#">some other link</a></li> -->
      <li><a href="/privacy">privacy policy</a></li>
      <!-- Add more items or content as needed -->
    </ul>
  </div>

  <!-- Footer pinned to bottom via flexbox -->
  <Footer />
</aside>
