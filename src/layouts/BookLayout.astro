---
import Footer from '../components/Footer.astro';
import '../styles/bookshelf.css';
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? title + ' | 2025' : 'Bookshelf'}</title>
  </head>
  <body>
    <main class="book-layout">
      <slot />
    </main>
    <!-- Sticky back arrow to go home -->
    <a href="/" class="back-arrow">&larr;</a>
    <Footer />
  </body>
</html>

<style>
  /* blog-specific layout overrides; global.css handles most styling */
  .book-layout {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px;
    text-align: left;
  }
</style>
