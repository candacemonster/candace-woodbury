---
import '../styles/global.css';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Candace Woodbury</title>
	</head>
	<body>
		<div class="layout">
			<!-- Mobile Menu Button -->
			<button class="menu-toggle">☰</button>
			<!-- Sidebar Navigation -->
			<aside class="sidebar">
				<h1 class="site-title">oh look, a website.</h1>
				<nav>
					<ul>
						<li><a href="/">home <br> (or whatever this is)</a></li>
						<li><a href="/blog">writings <br> (against my better judgment)</a></li>
						<li><a href="/books">books <br> (better than people)</a></li>
						<li><a href="/hikes">hikes & bikes <br> (mostly for the dogs)</a></li>
						<li><a href="/internet-finds">stuff I found <br> (and wish I hadn’t)</a></li>
					</ul>
				</nav>
			</aside>
			<!-- Main Content Area -->
			<main class="content">
				<slot />
			</main>
			<script>
				document.addEventListener("DOMContentLoaded", () => {
					const sidebar = document.querySelector(".sidebar");
					const menuButton = document.querySelector(".menu-toggle");
			
					if (menuButton && sidebar) {
						menuButton.addEventListener("click", () => {
							sidebar.classList.toggle("active");
						});
					}
				});
			</script>			
		</div>
	</body>
</html>