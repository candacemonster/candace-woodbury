---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';


// Export getStaticPaths so Astro can statically generate pages for each blog post.
export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    // Using "slug" from the postâ€™s frontmatter
    params: { slug: post.slug }
  }));
}

const { slug } = Astro.params as { slug: string };
const posts = await getCollection('blog');
const post = posts.find((p) => p.slug === slug) as CollectionEntry<'blog'>;

if (!post) {
  throw new Error(`Post not found for slug: ${slug}`);
}
---
<BaseLayout>
  <article class="post-content">
    <h1>{post.data.title}</h1>
    <time datetime={post.data.date}>{post.data.date}</time>
    <div style="margin-top: 1rem;" set:html={post.body} />
  </article>
</BaseLayout>
